<widget>
	<type>pactResponse</type>
	<parameters>
		<xsl>namedDriver</xsl>
		<pactrequest>
			<![CDATA[
			<pactrequest>
			    <target>
			        <uid>{policyUid}</uid>
			    </target>
			    <context>
                    <actor><actorUid>123</actorUid></actor>
                    <party><partyUid>123</partyUid></party>
			    </context>
			    <timepoint>
			        <effectivetime>now</effectivetime>
			        <physicaltime>now</physicaltime>
			    </timepoint>
			   <return>
			        <name>asIdentifiedEntity</name>
					<params>
	          		 <descriptionPattern>[Party Role:namedDriver.[assocdescription.{firstName} {surname}]]|[Party Role:namedDriver.[assocdescription.{uid}]]|[Party Role:namedDriver.[assocdescription.[clientIndDetails.{gender}]]]</descriptionPattern>
	      			 </params>
			    </return>
			</pactrequest>
			]]>
		</pactrequest>
	</parameters>
	<attributes>
		<js>namedDriver.js</js>
		<css>namedDriver.css</css>
		<displayHeader>false</displayHeader>
	</attributes>
</widget>
